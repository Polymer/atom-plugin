{
  "name": "polymer-ide",
  "main": "./lib/polymer-ide",
  "version": "0.3.0",
  "description": "Provides linting, autocompletion, and more for web components.",
  "keywords": [],
  "repository": "https://github.com/polymer/atom-plugin",
  "license": "BSD-3-Clause",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "scripts": {
    "build": "tsc",
    "format": "find src spec | grep '\\.js$\\|\\.ts$' | xargs clang-format --style=file -i",
    "preversion": "tsc && git add lib/ -f",
    "postversion": "git rm -r lib/ && git commit -m \"Automatic removal of lib folder after release commit.\" && tsc",
    "test": "tsc && atom --test spec"
  },
  "dependencies": {
    "@types/node": "^6.0.41",
    "fs-extra": "^2.1.2",
    "marked": "^0.3.6",
    "polymer-analyzer": "=2.0.0-alpha.35",
    "polymer-editor-service": "=1.4.0"
  },
  "devDependencies": {
    "@types/atom": "0.0.32",
    "@types/marked": "0.0.28",
    "clang-format": "=1.0.52",
    "temp": "^0.8.3",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    },
    "autocomplete.provider": {
      "versions": {
        "2.0.0": "provideAutocompleter"
      }
    }
  }
}
